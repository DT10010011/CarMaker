        <ImageView
            android:id="@+id/windows"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:srcCompat="@drawable/hondacivicwindowsnormalcropped" />

        <ImageView
            android:id="@+id/wheels"
